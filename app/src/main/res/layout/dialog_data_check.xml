<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_round_square_shape_m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/dialog_round_square_shape">

        <TextView
            android:id="@+id/data_check_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/notosans_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="온도"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/notosans_medium"/>

            <EditText
                android:id="@+id/data_check_temperature"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:includeFontPadding="false"
                android:hint="단위 (℃)"
                android:maxLength="4"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:fontFamily="@font/notosans_normal"
                android:background="@drawable/custom_edit_text"
                android:theme="@style/CustomEditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="습도"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/notosans_medium"/>

            <EditText
                android:id="@+id/data_check_humidity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:includeFontPadding="false"
                android:hint="단위 (%)"
                android:maxLength="3"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:fontFamily="@font/notosans_normal"
                android:background="@drawable/custom_edit_text"
                android:theme="@style/CustomEditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="미세먼지 농도"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/notosans_medium"/>

            <EditText
                android:id="@+id/data_check_dust"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:includeFontPadding="false"
                android:hint="단위 (㎍/m³)"
                android:maxLength="10"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:fontFamily="@font/notosans_normal"
                android:background="@drawable/custom_edit_text"
                android:theme="@style/CustomEditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="위치"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/notosans_medium"/>

            <EditText
                android:id="@+id/data_check_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:includeFontPadding="false"
                android:hint="형식 (도˚분'초/방향)"
                android:maxLength="50"
                android:singleLine="true"
                android:fontFamily="@font/notosans_normal"
                android:background="@drawable/custom_edit_text"
                android:theme="@style/CustomEditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="장애물 여부"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/notosans_medium"/>

            <EditText
                android:id="@+id/data_check_obstacle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:includeFontPadding="false"
                android:hint="O, X"
                android:maxLength="1"
                android:singleLine="true"
                android:fontFamily="@font/notosans_normal"
                android:background="@drawable/custom_edit_text"
                android:theme="@style/CustomEditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_check_modify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="수정"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:background="@drawable/round_shape_button4"/>

            <TextView
                android:id="@+id/data_check_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="삭제"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:background="@drawable/round_shape_button6"/>

            <TextView
                android:id="@+id/data_check_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="닫기"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_bold"
                android:background="@drawable/round_shape_button5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>