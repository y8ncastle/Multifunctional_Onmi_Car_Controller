<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Button"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/now_date"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:text="2000-01-01"
                        android:textSize="15sp"
                        android:fontFamily="@font/notosans_normal"/>

                    <TextView
                        android:id="@+id/now_time"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textSize="19sp"
                        android:fontFamily="@font/notosans_bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button_left"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/left_button"/>

                    <ImageView
                        android:id="@+id/button_ccw"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/rotation_ccw"/>

                    <ImageView
                        android:id="@+id/button_right"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/right_button"/>
                </LinearLayout>
            </LinearLayout>

            <WebView
                android:id="@+id/camera_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginBottom="20dp"
                android:background="@drawable/square_shape_w_line"
                android:visibility="gone">
            </WebView>

            <LinearLayout
                android:id="@+id/camera_screen_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:background="@drawable/square_shape_w_line"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosans_normal"
                    android:gravity="center"
                    android:text="카메라 화면"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/wifi"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/battery100"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button_forward"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/forward_button"/>

                    <ImageView
                        android:id="@+id/button_cw"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/rotation_cw"/>

                    <ImageView
                        android:id="@+id/button_rear"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/rear_button"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/button_shutter"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="촬영"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_shape_button"
                    android:fontFamily="@font/notosans_bold"
                    android:onClick="ButtonClicked"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_plate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/round_square_shape_w_line"
                android:orientation="horizontal"
                android:visibility="visible"
                android:onClick="ButtonClicked">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:src="@drawable/sun"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="온도"
                            android:textSize="12sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:src="@drawable/water"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="습도"
                            android:textSize="12sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:src="@drawable/dust"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="미세먼지 농도"
                            android:textSize="12sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/round_shape"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="장애물 센서"
                            android:textSize="12sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/notosans_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="13sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/notosans_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/info_save"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="저장"
                        android:fontFamily="@font/notosans_bold"
                        android:background="@drawable/round_shape_button3"
                        android:onClick="ButtonClicked"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_plate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:background="@drawable/round_square_shape_w_line"
                android:orientation="horizontal"
                android:visibility="gone"
                android:onClick="ButtonClicked">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="현재 동작 상태  :  "
                    android:textSize="15sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/notosans_normal"/>

                <TextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="정지"
                    android:textSize="15sp"
                    android:textColor="@color/pink"
                    android:fontFamily="@font/notosans_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/button_back"
                        android:layout_width="80dp"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:text="종료"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape_button2"
                        android:fontFamily="@font/notosans_bold"
                        android:onClick="ButtonClicked"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/webiopi_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:visibility="invisible">
    </WebView>
</RelativeLayout>